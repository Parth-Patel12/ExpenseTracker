<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mdate"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_gravity="center"
        android:background="#4d4c4c"
        android:textColor="#fffefe"
        tools:text="234567"
        android:textAlignment="center"
        android:textSize="15dp"></TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:id="@+id/database"
            tools:src="@drawable/database_plus"
            android:padding="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@id/database"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/mname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceMedium"
                tools:text="SHUBHAM"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/mcategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                tools:text="FOOD"
                android:textSize="14dp"></TextView>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/mamount"
            tools:src="@drawable/inr"
            android:id="@+id/symbol"
            android:layout_marginTop="14dp" />

        <TextView
            android:id="@+id/mamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/edit"
            tools:text="10000"
            android:textAlignment="center"
            android:layout_marginRight="14dp"
            tools:textColor="#f62929"
            android:textSize="20dp"
            android:layout_marginTop="14dp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/edit"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:src="@drawable/edit"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>